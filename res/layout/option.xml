            android:textColor="#0056DC" />
            
    </LinearLayout>
        
            <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
            
        <Button
            android:id="@+id/Sys_de_Prod_1A"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onClick"
            android:text="@string/sys_de_prod_1a"
            android:textColor="#FFD300" />
        
        <Button
            android:id="@+id/Sys_de_Prod_2A"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onClick"
            android:text="@string/sys_de_prod_2a"
            android:textColor="#FFD300" />
        
        <Button
            android:id="@+id/Sys_de_Prod_3A"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onClick"
            android:text="@string/sys_de_prod_3a"
            android:textColor="#FFD300" />
            
    </LinearLayout> 
        
        
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/L3_Meca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onClick"
            android:text="@string/meca_l3"
            android:textColor="#810078" />

        <Button
            android:id="@+id/M1_Meca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
